#!/bin/bash
set -xe

# The Debian-exim user and related groups doesn't have a stable uid/gid.
# If someone has a volume with the Exim stuff in it, but rebuild the
# image, it is possible that the permissions will be wrong.
# So, we try to fix it.

chown -R Debian-exim /var/log/exim4 /var/spool/exim4 || true
chown -R Debian-exim /var/run/exim4 || true
chgrp -R adm /var/log/exim4 || true
chgrp -R Debian-exim /var/spool/exim4  || true
chgrp -R Debian-exim /var/run/exim4 || true
chgrp Debian-exim /var/lib/exim4/config.autogenerated || true

